{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"allowJs": true
	},
	"include": ["src/**/*.ts", "tests/**/*.spec.ts", "tests/**/*.test.ts"],
	"lib": ["ES2016"],
	"exclude": ["./node_modules/"]
}
